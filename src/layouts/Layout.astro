---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Lily Ballif's portfolio" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="../../public/images/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="h-[100svh] flex flex-col first-letter justify-between">
    <slot />
  </body>
</html>


